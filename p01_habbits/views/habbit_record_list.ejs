<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>습관 기록</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <main>
      <section class="container-md">
        <h1 class="h1 mb-4">습관 기록</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">습관 기록</th>
              <th scope="col">생성일</th>
              <th scope="col">삭제</th>
            </tr>
          </thead>
          <tbody>
            <% records.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.recordContent %></a></td>
              <td><%= item.createdAt %></td>
              <td><a href="/record_delete/<%= item.id %>" class="btn btn-outline-primary btn-sm">삭제</a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <div>
          <a href="/habbit_record_add" class="btn btn-primary">습관 기록 추가하기</a>
        </div>
      </section>
    </main>
  </body>
</html>
