<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>습관 기록</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
    <link rel="stylesheet" href="/style.css" />
    <script defer src="/main.js"></script>
  </head>
  <body>
    <main>
      <nav class="navbar navbar-expand-sm bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a href="/habbit" class="navbar-brand">습관</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/habbit">나의 습관</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/logout">로그아웃</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <section class="container-sm">
        <h1 class="h1 mb-3">습관 기록</h1>
        <div class="mb-4 d-flex justify-content-end">
          <a href="/habbit/<%= records[0].habbitId %>/record/add/" class="btn btn-primary">습관 기록 추가하기</a>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col" style="min-width: 70px;">#</th>
              <th scope="col" style="width: 100%;">습관 기록</th>
              <th scope="col" style="min-width: 130px;">생성일</th>
              <th scope="col" style="min-width: 70px;">삭제</th>
            </tr>
          </thead>
          <tbody>
            <% records.forEach(item => { %>
            <tr>
              <td><%= item.rowID %></td>
              <td><%= item.recordContent %> / <%= item.id %></a></td>
              <td><%= item.createdAt %></td>
              <td><a href="/habbit/<%= item.habbitId %>/record/delete/<%= item.id %>" class="btn btn-outline-primary btn-sm">삭제</a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <nav>
          <% if (totalPage > 1) { %>
          <ul class="pagination justify-content-center">
            <% if (currentPage == 1) { %>
              <li class="page-item disabled">
            <% } else { %>
              <li class="page-item">
            <% } %>
              <a class="page-link" href="/habbit/<%= records[0].habbitId %>?page=<%= currentPage - 1 %>"" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% for (i = 1; i <= totalPage; i++) { %>
              <% if (currentPage == i) { %>
                <li class="page-item active">
              <% } else { %>
                <li class="page-item">
              <% } %>
              <a class="page-link" href="/habbit/<%= records[0].habbitId %>?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
            <% if (currentPage == totalPage) { %>
              <li class="page-item disabled">
            <% } else { %>
              <li class="page-item">
            <% } %>
              <a class="page-link" href="/habbit/<%= records[0].habbitId %>?page=<%= currentPage + 1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
          <% } %>
        </nav>
      </section>
    </main>
  </body>
</html>
