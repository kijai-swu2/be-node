<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>나의 습관</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
    <link rel="stylesheet" href="/style.css" />
    <script defer src="/main.js"></script>
  </head>
  <body>
    <main>
      <nav class="navbar navbar-expand-sm bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a href="/habbit" class="navbar-brand">습관</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/habbit">나의 습관</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/logout">로그아웃</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <section class="container-sm">
        <h1 class="h1 mb-3">나의 습관</h1>
        <div class="mb-4 d-flex justify-content-end">
          <a href="/habbit/add" class="btn btn-primary">습관 추가하기</a>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col" style="min-width: 50px;">#</th>
              <th scope="col" style="width: 100%;">습관</th>
              <th scope="col" style="min-width: 150px;">기간</th>
              <th scope="col" style="min-width: 70px;">기록</th>
              <th scope="col" style="min-width: 70px;">삭제</th>
            </tr>
          </thead>
          <tbody>
            <% if (habbits && habbits.length > 0) {
              habbits.forEach(item => { %>
            <tr>
              <td><%= item.rowId %></td>
              <td><a href="/habbit/<%= item.id %>"><%= item.habbitName %> / <%= item.id %></a></td>
              <td><%= item.startsAt %> ~<br><%= item.endsAt %></td>
              <td><a href="/habbit/<%= item.id %>"><%= item.records %> 개</a></td>
              <td>
                <div class="btn-group-vertical btn-group-sm">
                  <a href="/habbit/<%= item.id %>/edit" class="btn btn-outline-primary">수정</a>
                  <a href="/habbit/delete/<%= item.id %>" class="btn btn-outline-primary">삭제</a>
                </div>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="6" class="text-center">등록된 습관이 없어요.</td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <nav>
          <% if (totalPage > 1) { %>
          <ul class="pagination justify-content-center">
            <% if (currentPage == 1) { %>
              <li class="page-item disabled">
            <% } else { %>
              <li class="page-item">
            <% } %>
              <a class="page-link" href="/habbit?page=<%= currentPage - 1 %>"" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% for (i = 1; i <= totalPage; i++) { %>
              <% if (currentPage == i) { %>
                <li class="page-item active">
              <% } else { %>
                <li class="page-item">
              <% } %>
              <a class="page-link" href="/habbit?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
            <% if (currentPage == totalPage) { %>
              <li class="page-item disabled">
            <% } else { %>
              <li class="page-item">
            <% } %>
              <a class="page-link" href="/habbit?page=<%= currentPage + 1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
          <% } %>
        </nav>
      </section>
    </main>
  </body>
</html>
