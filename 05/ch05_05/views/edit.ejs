<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit post</title>
    <link rel="stylesheet" href="https://unpkg.com/simpledotcss/simple.min.css" />
    <style>
      body {
        grid-template-rows: auto 1fr;
      }

      .space-between {
        display: flex;
        justify-content: space-between;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Edit post</h1>
    </header>
    <main>
      <div class="container">
        <form action="/edit/<%= post['id'] %>" method="post">
          <figure>
            <p>
              <label for="title">Title</label>
              <input type="text" name="title" value="<%= post['title'] %>" size="100" />
            </p>
            <p>
              <label for="author">Author</label>
              <input type="text" name="author" value="<%= post['author'] %>" size="30" />
            </p>
            <p>
              <label for="content">Content</label>
              <textarea name="content" id="content" rows="10"><%= post['content'] %></textarea>
            </p>
          </figure>
          <p class="space-between">
            <a href="/view/<%= post['id'] %>" class="button">Abort</a>
            <button class="button" type="submit">Save</button>
          </p>
        </form>
      </div>
    </main>
  </body>
</html>
